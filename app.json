{
  "name": "The Pyoneer Platform",
  "description": "Open-source Django web application of The Pyoneer Project.",
  "website": "https://pyoneers.dev/",
  "repository": "https://github.com/ThePyoneerProject/platform",
  "stack": "container",
  "env": {
    "DJANGO_SECRET_KEY": {
      "description": "The Django secret key used for cryptographic signing.",
      "generator": "secret"
    },
    "DJANGO_SETTINGS_MODULE": {
      "description": "The Django settings module to use.",
      "value": "pyoneer.settings.production"
    },
    "DJANGO_ALLOWED_HOSTS": {
      "description": "The Django allowed hosts.",
      "value": "pyoneers.dev,.pyoneers.dev,.herokuapp.com"
    },
    "DJANGO_SUPERUSER_EMAIL": {
      "description": "The email address of the Django superuser.",
      "required": true
    },
    "DJANGO_SUPERUSER_PASSWORD": {
      "description": "The password of the Django superuser.",
      "required": true
    },
    "DJANGO_SUPERUSER_USERNAME": {
      "description": "The username of the Django superuser.",
      "required": true
    },
    "ENVIRONMENT_TYPE": {
      "description": "The environment type (staging or production).",
      "value": "production"
    },
    "SENTRY_DSN": {
      "description": "The Sentry DSN.",
      "required": true
    },
    "MAILGUN_API_KEY": {
      "description": "The Mailgun API key.",
      "required": true
    },
    "MAILGUN_API_URL": {
      "description": "The Mailgun API URL.",
      "required": true
    },
    "MAILGUN_DOMAIN": {
      "description": "The Mailgun domain.",
      "required": true
    },
    "GOOGLE_CLIENT_ID": {
      "description": "The Google OAuth 2.0 client ID.",
      "required": true
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "The Google OAuth 2.0 client secret.",
      "required": true
    },
    "DISCORD_CLIENT_ID": {
      "description": "The Discord OAuth 2.0 client ID.",
      "required": true
    },
    "DISCORD_CLIENT_SECRET": {
      "description": "The Discord OAuth 2.0 client secret.",
      "required": true
    },
    "DISCORD_BOT_TOKEN": {
      "description": "The Discord bot token.",
      "required": true
    },
    "DISCORD_GUILD_ID": {
      "description": "The Discord guild ID.",
      "required": true
    },
    "GITHUB_SECRET": {
      "description": "The GitHub webhook secret.",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "The OpenAI API key.",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": ["heroku-postgresql", "heroku-redis"]
}
